<div class="container px-5 px-sm-0">
  <div>
  <%= flash[:notice] %>
  </div
  
  <div class="row">
    
    
    <%= render 'books/book.html.erb' %>
    
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= image_tag @user.get_profile_image(90,90) %></td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
                <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>