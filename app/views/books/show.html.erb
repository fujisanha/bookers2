<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <button class="btn out-line-secondary btn-block">
          <%= link_to do %>
            <i class="fa-solid fa-user-gear"></i>
          <% end %>
        </button>
      </div>
      <h2 class="mt-3 pb-3">New Book</h2>
      <%= form_with model: @book, url: '/books', method: :post do |f| %>
        <h6>Title</h6>
        <%= f.text_field :title %>
        <h6>Opinion</h6>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
    
    
    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(current_user.id) do %>
                <%= image_tag @user.get_profile_image(100,100) %>
                <%= @user.name %>
              <% end %>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <td>
              <button class="btn btn-sm btn-success">
                <%= link_to "Edit", edit_book_path(@book) %>
              </button>
            </td>
            <td>
              <button class="btn btn-sm btn-danger">
                <%= link_to "Destroy", book_path(@book), method: :delete %>
              </button>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>